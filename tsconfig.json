{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false
    },
    "exclude": [
        "node_modules",
        "typings",
        "server",
        "test"
    ],
    "filesGlob": [
      "**/*.ts",
      "typings/main.d.ts",
      "node_modules/angular2/typings/browser.d.ts"
    ]
}
